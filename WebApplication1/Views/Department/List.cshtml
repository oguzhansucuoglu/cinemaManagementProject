@{
    @model IEnumerable<WebApplication1.Models.DepartmentModel>
}
<!DOCTYPE html>

<div class="row">  
    <div class="col-md-12">  
        <div class="panel panel-primary list-panel" id="list-panel">  
            <div class="panel-heading list-panel-heading">  
                <h1 class="panel-title list-panel-title">Department</h1>  
            </div>  
            <div class="panel-body">  
                <table id="employee-data-table" border="1" class="table table-striped table-bordered" style="width:100%">
                    <thead>  
                        <tr>  
                            <th>id</th>  
                            <th>name</th>  
                            <th>Manager Name</th>  

                        </tr>  
                    </thead>  
                    <tbody>  
                        @foreach (var deparment in Model)  
                        {  
                            <tr>
                                <td>@deparment.Id</td>
                                <td>@deparment.name</td>
                                <td>@deparment.managerName</td>
                                <td>@Html.ActionLink("Edit", "Edit", new { id = deparment.Id })</td>
                                
                            </tr>  
                        }  
                    </tbody>  
                </table>  
            </div>  
        </div>  
    </div>  
</div>