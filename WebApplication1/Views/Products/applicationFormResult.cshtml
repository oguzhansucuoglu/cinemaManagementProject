@{
}
<style>

    div {
        width: 50%;
        margin: 0 auto;
        font-family: Arial, sans-serif;     
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    div p {
        margin: 0;
    }   

    .first-color {
        background: #233142;
    }

    .second-color {
        background: #455d7a;
    }

    .third-color {
        background: #f95959;
    }

    .fourth-color {
        background: #e3e3e3;
    }
</style>

<div>
    <h2 class="third-color">Application Sent!</h2>
    <h3 class="fourth-color">Application Form Sent By @ViewBag.fname</h3>
    Department Name : @ViewBag.department <br />
    ID no : @ViewBag.idNo <br />
    Name : @ViewBag.fname <br />
    Last Name : @ViewBag.lname <br />
    Graduation Status : @ViewBag.gradStat <br />
    School : @ViewBag.school <br />
    Age : @ViewBag.age <br />
    Marital Status : @ViewBag.mStatus <br />
    Motivation : @ViewBag.motivation <br />
    Email : @ViewBag.email <br />
    Applied Work Hours : @ViewBag.FullTime @ViewBag.PartTime @ViewBag.Internship
</div>